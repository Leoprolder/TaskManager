@model IEnumerable<TaskManager.Models.Task>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Task manager</title>
    <link href="@Url.Content("~/Content/Styles/TaskManager.css")" rel="stylesheet" type="text/css">
    <link src="@Url.Content("~/Scripts/Task/TaskManager.js")" type="text/javascript">
    <script src="@Url.Content("~/Scripts/jquery-3.4.1.min.js")" type="text/javascript" ></script>
</head>
<body>

    <div class="column">

        <div class="title"><h1>Manage your tasks like never before.</h1></div>

        <div>
            <button class="card btn" onclick="OpenNewTaskForm()">Create task</button>
        </div>

        @if (ViewBag.Tasks != null)
        {
            foreach (var task in ViewBag.Tasks)
            {
                <div class="row task card">
                    <input class="inp-cbx" id="@task.Id" type="checkbox" checked="@task.Done" style="display: none" />
                        <label class="cbx" for="@task.Id">
                            <span>
                                <svg width="12px" height="9px" viewBox="0 0 12 9">
                                    <polyline points="1 5 4 8 11 1"></polyline>
                                </svg>
                            </span><span>@task.Description</span>
                        </label>
                    <div class="task-controls">
                        <button class="btn" onclick="DeleteTask()">❌</button>
                        <button class="btn" onclick="EditTask()">🖊️</button>
                    </div>
                </div>
            }
        }
    </div>
</body>
</html>
